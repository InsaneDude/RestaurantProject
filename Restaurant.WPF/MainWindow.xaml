<Window x:Class="Restaurant.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.WPF"
        mc:Ignorable="d"
        Title="Ресторан" Height="300" Width="425">
    <Grid>
        <Canvas Background="Linen">
            <TextBlock Canvas.Top="15" Canvas.Left="15" 
                       FontFamily="Calibri" FontSize="15" 
                       FontWeight="Bold">Список доступной еды</TextBlock>
            <ListBox Name="FoodList" Canvas.Top="32" Canvas.Left="20">
                <ListBoxItem>Тест1</ListBoxItem>
                <ListBoxItem>Тестинг2</ListBoxItem>
                <ListBoxItem>Тестируем3</ListBoxItem>
                <ListBoxItem>Проверка ширины4</ListBoxItem>
            </ListBox>
            <TextBlock Name="Info" Canvas.Top="32" Canvas.Left="200" 
                       Text="{Binding Path = selectedFood}"></TextBlock>
            <Button Name="OrderButton" Canvas.Top="100" Canvas.Left="200"
                    Height="50" Width="200" Content="Заказать выбранную еду"></Button>
        </Canvas>
    </Grid>
</Window>
