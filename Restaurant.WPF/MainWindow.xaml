        <Canvas Background="Linen">
            <ListBox Name="foodList" Canvas.Top="75" Canvas.Left="20">
                <TextBlock FontWeight="Bold" TextDecorations="Underline" Text="Доступная еда" />
                <ListBoxItem Content="Тест"></ListBoxItem>  
                <ListBoxItem Content="Tea"></ListBoxItem>  
                <ListBoxItem Content="Orange Juice"></ListBoxItem>  
                <ListBoxItem Content="Milk"></ListBoxItem>  
                <ListBoxItem Content="Iced Tea"></ListBoxItem>  
                <ListBoxItem Content="Mango Shake"></ListBoxItem>  
            </ListBox>
        </Canvas>
    </Grid>
</Window>
